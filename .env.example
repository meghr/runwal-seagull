# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Database (PostgreSQL via Supabase)
# Get your connection string from: https://supabase.com/dashboard/project/_/settings/database
# Use the "Connection Pooling" URL (port 6543) for better performance
# Format: postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres:password@db.yourproject.supabase.co:5432/postgres"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# File Upload (Cloudinary)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="runwal_seagull_preset"
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Email Service (Resend)
RESEND_API_KEY=""
EMAIL_FROM="noreply@runwalseagull.com"

# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Optional: Error Tracking (Sentry)
# NEXT_PUBLIC_SENTRY_DSN=""
